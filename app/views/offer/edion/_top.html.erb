<% (1..3).each do |i| %>
<div class="row">
  <div class="top-img">
    <%= image_tag(asset_pack_path("media/images/edion/top/#{i}.png"), class: "img-responsive") %>
    <div class="best-selling"><%= t("edion.top.best_selling", number: i)%></div>
  </div>
  <div class="col-xs-12">
    <h3><%= t("edion.top.#{i}_headline")%></h3>
    <p><%= t("edion.top.#{i}_desc_html")%></p>
  </div>
</div>
<% end %>
<p class="black-bg"><%= t("edion.top.other")%></p>
<% (4..10).each do |i| %>
<div class="row mtop10 top10-p2">
  <div class="col-xs-9 col-xs-center col-sm-4">
    <%= image_tag(asset_pack_path("media/images/edion/top/#{i}.png"), class: "img-responsive") %>
  </div>
  <div class="col-xs-12 col-sm-8">
    <h3 class="nopadding-top"><%= t("edion.top.#{i}_headline")%></h3>
    <p><%= t("edion.top.#{i}_desc_html")%></p>
  </div>
</div>
<% end %>