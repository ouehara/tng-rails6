<% set_meta_tags noindex: true %>
<div class="loginPage">
  <h2 class="loginPage_heading"><%= title 'Log in' %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { autocomplete: "off" }) do |f| %>
    <div class="field form-group row">
      <%= f.label :email, class: "col-sm-4" %><br />
      <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="field form-group row">
      <%= f.label :password, class: "col-sm-4" %><br />
      <div class="col-sm-8">
      <%= f.password_field :password,  class: "form-control"  %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-group row">
        <div class="col-sm-12">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
        </div>
      </div>
    <% end -%>

    <div class="actions form-group row">
      <div class="col-sm-12">
      <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
