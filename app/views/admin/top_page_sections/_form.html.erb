
<%= form_for([:admin, top_page_section]) do |f| %>
  <% if top_page_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(top_page_section.errors.count, "error") %> prohibited this top_page_section from being saved:</h2>

      <ul>
      <% top_page_section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :active %>
    <%= f.check_box :active, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :selected_template %>
    <%= top_page_section.selected_template %>
    <%= f.select :selected_template, TopPageSection.selected_templates.keys.to_a.map { |r| [r.capitalize, TopPageSection.selected_templates[r]] }, {}, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :more_btn_text %>
    <%= f.text_field :more_btn_text, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :more_btn_link %>
    <%= f.text_field :more_btn_link, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success pull-right" %>
  </div>
<% end %>
