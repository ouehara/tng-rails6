<%= render 'page_title' %>

<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Show</h2>

      <%= link_to admin_pickups_path, class: "pull-right btn btn-default" do %>
      <i class="icon-list"></i>
      Index
      <% end %>
      <%= link_to new_admin_pickup_path, class: "pull-right btn btn-default" do %>
      <i class="icon-note"></i> Add another
      <% end %>
      <%= link_to edit_admin_pickup_path(@pickup), class: "pull-right btn btn-info" do %>
      <i class="icon-pencil"></i>
      Edit
      <% end %>
      <%= link_to [:admin, @pickup], method: "DELETE", data: { confirm: "Are you sure want to delete this pickup?" }, class: "pull-right btn btn-danger" do %>
      <i class="icon-trash"></i>
      Delete
      <% end %>
      <% unless @pickup.published? %>
      <%= link_to publish_admin_pickup_path(@pickup), method: "PATCH", data: { confirm: "Are you sure want to make publish this pickup?" }, class: "pull-right btn btn-warning" do %>
      Publish
      <% end %>
      <% else %>
      <%= link_to unpublish_admin_pickup_path(@pickup), method: "PATCH", data: { confirm: "Are you sure want to make unpublish this pickup?" }, class: "pull-right btn btn-warning" do %>
      Unpublish
      <% end %>
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <h1>
      <%= @pickup.title %>
    </h1>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>
              ID
            </th>
            <td>
              <%= @pickup.id %>
            </td>
          </tr>
          <tr>
            <th>
              Title
            </th>
            <td>
              <%= @pickup.title %>
            </td>
          </tr>
          <tr>
            <th>
              Content
            </th>
            <td>
              <%= @pickup.content %>
            </td>
          </tr>
          <tr>
            <th>
              Image
            </th>
            <td>
              <% if @pickup.image.exists? %>
              <%= image_tag @pickup.image.url(:thumb) %>
              <% else %>
              No image
              <% end %>
            </td>
          </tr>
          <tr>
            <th>
              Articles
            </th>
            <td>
              <%= render partial: 'admin/articles/article', collection: @pickup.articles %>
            </td>
          </tr>
          <tr>
            <th>
              Published At
            </th>
            <td>
              <%= @pickup.published_at.try(:strftime, '%F %T') %>
            </td>
          </tr>
          <tr>
            <th>
              Created At
            </th>
            <td>
              <%= @pickup.created_at.strftime('%F %T') %>
            </td>
          </tr>
          <tr>
            <th>
              Updated At
            </th>
            <td>
              <%= @pickup.updated_at.strftime('%F %T') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
