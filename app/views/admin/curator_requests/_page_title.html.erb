<div class="page-title">
  <div class="title_left">
    <h3>Curator Request</h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <%= search_form_for @q, url: admin_curator_requests_path do |f| %>
      <div class="input-group">
        <%= f.text_field :message_cont, class: "form-control", placeholder: "Search for..." %>
        <span class="input-group-btn">
          <%= f.button "Go!", class: "btn btn-default" %>
        </span>
      </div>
      <% end %>
    </div>

    <% if params[:q] %>
      <%= link_to admin_curator_requests_path, class: "pull-right btn" do %>
      Show all
      <% end %>
    <% end %>

  </div>
</div>
