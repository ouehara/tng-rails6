<%= render 'page_title' %>

<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Show</h2>

      <%= link_to admin_curator_requests_path, class: "pull-right btn btn-default" do %>
      <i class="icon-list"></i>
      Index
      <% end %>
      <%= link_to [:admin, @curator_request], method: "DELETE", data: { confirm: "Are you sure?" }, class: "pull-right btn btn-danger" do %>
      <i class="icon-trash"></i>
      Delete
      <% end %>

      <%= link_to reject_admin_curator_request_path, class: "pull-right btn btn-danger", method: "PATCH", disabled: @curator_request.rejected? do %>
      Reject
      <% end %>
      <%= link_to accept_admin_curator_request_path, class: "pull-right btn btn-primary", method: "PATCH",  disabled: @curator_request.accepted?  do %>
      Accept
      <% end %>

      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <h1>
      Request from <%= @curator_request.user.username %>
    </h1>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>
              Accepted
            </th>
            <td>
              <%= @curator_request.accepted_at.try(:strftime, "%F %T") %>
            </td>
          </tr>
          <tr>
            <th>
              Rejected
            </th>
            <td>
              <%= @curator_request.rejected_at.try(:strftime, "%F %T") %>
            </td>
          </tr>
          <tr>
            <th>
              ID
            </th>
            <td>
              <%= @curator_request.id %>
            </td>
          </tr>
          <tr>
            <th>
              Name
            </th>
            <td>
              <%= @curator_request.user.username %>
            </td>
          </tr>
          <tr>
            <th>
              Email
            </th>
            <td>
              <%= @curator_request.user.email %>
            </td>
          </tr>
          <tr>
            <th>
              Message
            </th>
            <td>
              <p>
                <%= @curator_request.message %>
              </p>
            </td>
          </tr>
          <tr>
            <th>
              Created At
            </th>
            <td>
              <%= @curator_request.created_at.strftime('%F %T') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
