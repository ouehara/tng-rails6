<%= render 'page_title' %>

<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Show</h2>

      <%= link_to admin_tags_path, class: "pull-right btn btn-default" do %>
      <i class="icon-list"></i>
      Index
      <% end %>
      <%= link_to new_admin_tag_path, class: "pull-right btn btn-default" do %>
      <i class="icon-note"></i> Add another
      <% end %>
      <%= link_to edit_admin_tag_path(@tag), class: "pull-right btn btn-info" do %>
      <i class="icon-pencil"></i>
      Edit
      <% end %>
      <%= link_to [:admin, @tag], method: "DELETE", data: { confirm: "Are you sure?" }, class: "pull-right btn btn-danger" do %>
      <i class="icon-trash"></i>
      Delete
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <h1>
      <%= @tag.name %>
    </h1>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>
              ID
            </th>
            <td>
              <%= @tag.id %>
            </td>
          </tr>
          <tr>
            <th>
              Articles count
            </th>
            <td>
              <%= @tag.articles.count %>
            </td>
          </tr>
          <tr>
            <th>
              Created At
            </th>
            <td>
              <%= @tag.created_at.strftime('%F %T') %>
            </td>
          </tr>
          <tr>
            <th>
              Updated At
            </th>
            <td>
              <%= @tag.updated_at.strftime('%F %T') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
