<%= form_for([:admin, @tag], html: { class: "form" }) do |f| %>
  <% if @tag.errors.any? %>
    <%= render partial: 'admin/shared/error_message', locals: { resource: @tag } %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Tag name", autocomplete: "off" %>
    <input type="hidden" value="<%=I18n.locale %>" name="lang">
  </div>
  <div class="form-group">
    <%= f.label :slug %>
    <%= f.text_field :slug, class: "form-control", placeholder: "Slug", autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <small>Use %{tag} as placebolder for the tagname</small>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <% if !@categories.nil? %>
    Migrate to category<br/><small style="color:red;">warning: doing this will delete the tag and migrate all articles to the selected categroy</small>
    <br/>
    <%= select_tag "migrate_category", options_from_collection_for_select(@categories, :second,:first) %>
    <div class="form-group">
    include translation
    <input type="checkbox" name="includeTranslations" value="true" class= "form-control" />
  </div>
  <% end %>
  <%= f.submit class: "btn btn-success pull-right", data: { disable_with: "Submitting..." } %>

<% end %>
