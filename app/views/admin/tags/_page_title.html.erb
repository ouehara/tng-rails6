<div class="page-title">
  <div class="title_left">
    <h3>Tags</h3>
  </div>

  <div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
      <div class="input-group">
        <input type="text" name="query" class="form-control" id="searchQuery" placeholder="Search for..." value="<%= params[:query] if params[:query] %>">
        <span class="input-group-btn">
          <button type="button" class="btn btn-default" onclick="if($('#searchQuery').val().length == 0){ return; }else{ window.location.href='/admin1500011/tags/search/'+$('#searchQuery').val(); }">Go!</button>
        </span>
      </div>
    </div>

    <% if params[:query] %>
      <%= link_to admin_tags_path, class: "pull-right btn" do %>
      Show all
      <% end %>
    <% end %>

  </div>
</div>
