<%= form_for([:admin, @contact], html: { class: "form" }) do |f| %>
  <% if @contact.errors.any? %>
    <%= render partial: 'admin/shared/error_message', locals: { resource: @contact } %>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", placeholder: "Sender name", autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control", placeholder: "Sender email", autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "contact title", autocomplete: "off" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control", placeholder: "Message", autocomplete: "off" %>
  </div>
  <%= f.submit class: "btn btn-success pull-right", data: { disable_with: "Submitting..." } %>

<% end %>
