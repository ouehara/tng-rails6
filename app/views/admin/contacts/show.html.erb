<%= render 'page_title' %>

<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Answer</h2>
      <%=  form_tag answer_admin_contacts_path, html: { class: "form" } do %>
        <%= hidden_field_tag "contact", @contact.id %>
        <div class="form-group">
        <%= text_area_tag "comment","", class: "form-control" %>
        Signature
        <%= 
        select_tag 'lang',  options_for_select(I18n.available_locales, :selected =>I18n.locale) 
        %>
        </div>
        <%= submit_tag "Send", class: "btn btn-success" %>
      <%end%>
      <%= form_for [:admin, @contact], :html => {:class => 'form',:remote=>true}  do |f| %>
        <%= f.label :state %><br>
        <%= f.select :state, Contact.states.keys %>
        <%= f.submit 'update', class: 'btn btn-success btn-xs' %>
      <% end %>
      <%= link_to admin_contacts_path, class: "pull-right btn btn-default" do %>
      <i class="icon-list"></i>
      Index
      <% end %>
      <%= link_to new_admin_contact_path, class: "pull-right btn btn-default" do %>
      <i class="icon-note"></i> Add another
      <% end %>
      <%= link_to edit_admin_contact_path(@contact), class: "pull-right btn btn-info" do %>
      <i class="icon-pencil"></i>
      Edit
      <% end %>
      <%= link_to [:admin, @contact], method: "DELETE", data: { confirm: "Are you sure?" }, class: "pull-right btn btn-danger" do %>
      <i class="icon-trash"></i>
      Delete
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <h1>
      <%= @contact.title %>
    </h1>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>
              ID
            </th>
            <td>
              <%= @contact.id %>
            </td>
          </tr>
          <tr>
            <th>
              Name
            </th>
            <td>
              <%= @contact.name %>
            </td>
          </tr>
          <tr>
            <th>
              Email
            </th>
            <td>
              <%= @contact.email %>
            </td>
          </tr>          <tr>
            <th>
              Title
            </th>
            <td>
              <%= @contact.title %>
            </td>
          </tr>
          <tr>
            <th>
              Message
            </th>
            <td style="white-space: pre-line"><%= @contact.content %></td>
          </tr>
          <tr>
            <th>
              Created At
            </th>
            <td>
              <%= @contact.created_at.strftime('%F %T') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
