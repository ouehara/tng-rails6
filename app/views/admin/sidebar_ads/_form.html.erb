<%= form_for([:admin, @ad], html: { class: "form", :multipart => true }) do |f| %>
<% if @ad.errors.any? %>
<%= render partial: 'admin/shared/error_message', locals: { resource: @ad } %>
<% end %>
<select class="lang-select">
<% selected_locale = I18n.locale%>
<% I18n.available_locales.each do |locale| %>
  <%I18n.with_locale(locale) do%>
  <%= locale%>
  
    <option <%= locale == selected_locale ? "selected" : "" %> value="<%= url_for(locale: locale) %>"><%=locale%></option>
  <%end%>
<%end%>
</select>
<script type="text/javascript">
$(".lang-select").on("change", function(ev){
  window.location.href = $(this).val()
})
</script>
<div class="form-group">
  <%= f.label :label %>
  <%= f.text_field :label, class: "form-control", placeholder: "Title", autocomplete: "off" %>
</div>

<div class="form-group">
  <%= f.label :banner, "Image", class: "control-label" %>
  <div class="row">
    <div class="col-sm-12">
      <%= f.file_field :banner %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :analytics_category %>
  <%= f.text_field :analytics_category, class: "form-control", placeholder: "analytics category", autocomplete: "off" %>
</div>
<div class="form-group">
  <%= f.label :analytics_label %>
  <%= f.text_field :analytics_label, class: "form-control", placeholder: "analytics label", autocomplete: "off" %>
</div>
<div class="form-group">
  <%= f.label :publish_start %>
  <%= f.datetime_select :publish_start, class: "form-control" , data:{ provide:'datepicker' } %>
</div>
<div class="form-group">
  <%= f.label :publish_end %>
  <%= f.datetime_select :publish_end, class: "form-control", :include_blank => true %>
</div>

<div class="form-group">
  <%= f.label :url %>
  <%= f.text_field :url,class: "form-control", placeholder: "url" %>
</div>

<%= f.submit class: "btn btn-success pull-right", data: { disable_with: "Submitting..." } %>

<% end %>
