<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Sidebar ads</h2>
      <%= link_to new_admin_sidebar_ad_path, class: "pull-right btn btn-default" do %>
      <i class="icon-note"></i> Add new
      <% end %>
      <div class="clearfix"></div>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <div class="table-responsive">
        <table class="table table-striped jambo_table">
          <thead>
            <tr class="headings">
              <th class="column-title">image</th>
              <th class="column-title">label</th>
              <th class="column-title">start date</th>
              <th class="column-title">end date</th>
              <th class="column-title">translations</th>
              <th class="column-title" colspan="3" style="width: 10%;">Actions</th>
            </tr>
          </thead>

          <tbody data-role="activerecord_sortable">
            <% @ads.each do |ad| %>
            <tr class="pointer" data-role="category<%= ad.id %>" data-move-url="<%= move_admin_sidebar_ad_url(ad.id) %>" data-position="<%= ad.position %>">
              <td><%= image_tag ad.banner.url(:original), style: "width: 120px;" if ad.banner.exists? %></td>
              <td><%= link_to ad.label, [:admin, ad] %></td>
              <td><%= ad.publish_start %></td>
              <td><%= ad.publish_end %></td>
              <td>
                <% ad.translated_locales.each do |l| %>
                  <%= l %>
                <%end%>
              </td>
              <td><%= link_to 'Show', [:admin, ad] %></td>
              <td><%= link_to 'Edit', edit_admin_sidebar_ad_path(ad) %></td>
              <td><%= link_to 'Delete', [:admin, ad], method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<script type="text/javascript">
$(document).ready(function(){
  $('*[data-role=activerecord_sortable]').activerecord_sortable();
});
</script>