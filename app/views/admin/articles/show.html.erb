<%= render 'page_title' %>

<div class="row">
  <div class="x_panel">
    <div class="x_title">
      <h2>Show</h2>

      <%= link_to admin_articles_path, class: "pull-right btn btn-default" do %>
      <i class="icon-list"></i>
      Index
      <% end %>
      <%= link_to new_admin_article_path, class: "pull-right btn btn-default" do %>
      <i class="icon-note"></i> Add another
      <% end %>
      <%= link_to edit_article_path("en",@article) , class: "pull-right btn btn-info" do %>
      <i class="icon-pencil"></i>
      Edit
      <% end %>
      <%= link_to [:admin, @article], method: "DELETE", data: { confirm: "Are you sure?" }, class: "pull-right btn btn-danger" do %>
      <i class="icon-trash"></i>
      Delete
      <% end %>
      <div class="clearfix"></div>
    </div>
    <div class="clearfix"></div>
    <h1>
      <%= @article.title %>
    </h1>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <th>
              ID
            </th>
            <td>
              <%= @article.id %>
            </td>
          </tr>
          <tr>
            <th>
              Title
            </th>
            <td>
              <%= @article.title %>
            </td>
          </tr>
          <tr>
            <th>
              Contents
            </th>
            <td>
              <%= @article.contents %>
            </td>
          </tr>
          <tr>
            <th>
              Tags
            </th>
            <td>
              <%= @article.tags.map{ |tag| tag.name }.join(",") %>
            </td>
          </tr>
          <tr>
            <th>
              Created At
            </th>
            <td>
              <%= @article.created_at.strftime('%F %T') %>
            </td>
          </tr>
          <tr>
            <th>
              Updated At
            </th>
            <td>
              <%= @article.updated_at.strftime('%F %T') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
