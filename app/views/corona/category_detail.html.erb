<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="area_filter_box">
        <label for="area_filter"><%= I18n.t("covid.place_list.area") %>:</label>
        <select name="area_filter" id="area_filter" class="form-control-lg" onChange="areaFilter();" multiple="multiple" style="width:100%;">
          <% @areas.each.with_index do |area| %>
            <option value="<%= area.id %>"><%= area.name %></option>
          <% end %>
        </select>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12" id="results">
      <div id="text_status">
        <div id="count_total"></div>
        <div id="current_count"><%= t 'covid.result.current_count_html' %></div>
      </div>
    </div>
  </div>
  <hr>
  <div class="results">
    <%= render :partial => 'corona/icon_list' %>
  </div>
</div>

<div class="container search_result">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      <%if @establishment.blank? %>
        <p style="text-align: center; margin-bottom: 40px;"><%= I18n.t "empty_state" %></p>
      <%end%>
      <div id="page_status"></div>
      <ul class="search_result_list">
      <% @establishment.each.with_index do |hotel, index| %>
        <% area_lists = area_additional(hotel.id, hotel.area_id) %>
        <% area_ids = [] %>
        <% area_lists.each do |a| %>
            <% area_ids.push(a[0]) %>
          <% end %>
        <li data-area="<%= area_ids %>">
          <div class="row" id=<%= "hotel#{hotel.id}"%>>
            <div class="col-xs-12 hotel-header">
              <div class="row">
                <div class="col-xs-12 col-sm-7">
                  <h3 class="hotel-name"><%= raw sanitize hotel.name,  tags: %w(sub sup) %></h3>
                  <%if  !hotel.address.blank? %>
                    <div class="hotel-location-wrapper">
                      <p class="hotel-location">
                        <%if !hotel.maps.blank? %>
                          <a href="<%= hotel.maps %>" >
                        <% end %>
                        <%a = hotel.address.split("\n") %><span class="bold"><%= a[0]%></span><%= a[1]%>
                        <%if  !hotel.maps.blank? %>
                          </a>
                        <% end %>
                      </p>
                    </div>
                  <% end %>
                </div>
                <div class="col-xs-12 col-sm-5">
                  <div class="hotel-area-wrap">
                    <% area_lists = area_additional(hotel.id, hotel.area_id) %>
                    <ul class="hotel-area-box">
                    <% area_lists.each do |a| %>
                      <li class="hotel-area"><%= a[1] %></li>
                    <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-xs-12 col-sm-7 hotel-images">
              <%# VIA INN Hotel 対応 %>
              <% if hotel.id == 96 %>
                <div class="nopadding first-img" style="position: relative;padding-bottom: 56.25%;padding-top: 30px;height: 0;overflow: hidden;margin-bottom: 2rem;">
                  <iframe width="560" height="315" src="https://www.youtube.com/embed/Cu_L_HoPbPA" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen style="position: absolute;top: 0;width: 100%;height: 100%;"></iframe>
                </div>
                <%hotel.hotel_images.each.with_index do |img, i|%>
                  <div class="col-xs-4 nopadding hotel-small">
                    <%= image_tag img.image.url(:medium), class: "img-responsive hotel-image"%>
                  </div>
                <%end%>
              <% else %>
                <%hotel.hotel_images.each.with_index do |img, i|%>
                  <% if i == 0%>
                    <div class="nopadding first-img">
                      <%= image_tag img.image.url(:medium), class: "img-responsive hotel-image"%>
                    </div>
                  <% else %>
                    <div class="col-xs-4 nopadding hotel-small">
                      <%= image_tag img.image.url(:medium), class: "img-responsive hotel-image"%>
                    </div>
                  <%end%>
                <%end%>
              <% end %>
              <%if  !hotel.img_src.blank? %>
                <div class="row">
                  <div class="col-xs-12">
                    <small><%= I18n.t "img_source" %> <%= hotel.img_src %> </small>
                  </div>
                </div>
              <% end %>
              <div class="hotel-features col-xs-12">
                <% hotel.hotel_features.each.with_index do |feature,i|%>
                  <div class="feature-icon-single-wrap"  >

                    <img src=<%= asset_pack_path("media/images/covid/icons/"+feature.feature.to_s+".svg")%> >

                  </div>
                <%end%>
              </div>
            </div>
            <div class="col-xs-12 col-sm-5 covid-estab-info">
              <div class="desc-wrap readmore-wrap">
                <% if  !hotel.description.blank? %>
                  <p class="bold placelist_desc"><%= t("covid.details.description") %></p>
                  <p>
                    <%=raw sanitize(simple_format(hotel.description), tags: %w(h2 p strong em a img br), attributes: %w(id class href src)) %>
                  </p>
                  <br/>
                <% end %>
                <% if  !hotel.summary.blank? %>
                  <p class="bold  placelist_desc"><%= t("covid.details.safety_description") %></p>
                  <p>
                    <%=raw sanitize(simple_format(hotel.summary), tags: %w(h2 p strong em a img br), attributes: %w(id class href src)) %>
                  </p>
                  <br/>
                <% end %>
                <% if  !hotel.price.blank? %>
                  <p class="bold">■ <%= t("covid.details.benefit") %></p>
                  <p class="hotel-description">
                    <%=raw sanitize(simple_format(hotel.price), tags: %w(h2 p strong em a img br), attributes: %w(id class href src)) %>
                  </p>
                  <br/>
                <% end %>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <a href="<%= hotel.url %>"
                     class="btn hotel-offical"
                     target="_blank"
                     onClick="ga('send', 'event', 'hotel_lp', 'click', '<%= I18n.locale.to_s+"."+hotel.name_en.parameterize(separator: "_") %>');">
                    <%= t("hotel-lp.website") %>
                  </a>
                  <%if hotel.official_text %>
                    <p class="website-sub bold"><%= t("hotel-lp.website_sub_html") %></p>
                  <%end%>
                  <%if hotel.recommend_text %>
                    <p class="website-sub bold"><%= t("hotel-lp.website_sub_recommend_text") %></p>
                  <%end%>
                </div>
              </div>
            </div>
          </div>
        </li>
      <%end%>
      </ul>
      <div class="page_nav"></div>
    </div>
  </div>
</div>
